<% include partials/header %>

<div class="container mt-3">
    <div class="jumbotron py-3 text-center">
        <h1 class="display-4"><%= post.title.toUpperCase() %></h1>
        <p class="lead"><%= post.body %></p>
        <hr class="my-4">
        <h4>Autorius</h4>
        
        <% users.forEach(function(user){
            if (user.id == post.userId) { %>
                <p><a href="users/<%= user.id %>"><span class="font-weight-bold">Slapyvardis: </span><%= user.username %></a></p>
        <% }}) %>
        
            <a class="btn btn-outline-success btn-md mt-3" href="/posts" role="button">Rodyti visus pranešimus</a>
    </div>
    
        
    
    <div class="card">
        <div class="card-header">
        Komentarai
        </div>
        <% comments.forEach(function(comment){
            if (comment.postId == post.id) { %>
                <div class="card-body">
                    <blockquote class="blockquote mb-0">
                        <p><%= comment.body %></p>
                        <footer class="blockquote-footer">El. pašto adresas: <cite title="Komentaro id <%= comment.id %>">(<%= comment.email %>)</cite></footer>
                    </blockquote>
                    <hr class="my-4">
                </div>
        <% }}) %>
    </div>
    
</div>
<% include partials/footer %>