<% include partials/header %>

<div class="container mt-3">
    <div class="jumbotron py-3 text-center">
        <h1 class="display-4">Sukurti naują įrašą</h1>
            <hr class="my-4">
        <form action="/posts" method="POST">
            <input type="text" name="id" hidden>
            
            <div class="form-group">
                <input type="text" class="form-control" name="title" placeholder="Įrašo pavadinimas" required>
            </div>        

            <div class="form-group">
                <textarea name="body" class="form-control" placeholder="Jūsų tekstas..." rows="3" required></textarea>
            </div>
            
            <div class="input-group mb-3">
                <div class="input-group-prepend">
                    <label class="input-group-text" for="author">Pasirinkti vartotoją</label>
                </div>
                <select name="userId" class="custom-select" id="author" required>
                    
                    <% users.forEach(function(user) { %>
                        <option value="<%= user.id %>"><%= user.name %></option>
                    <% }) %>
                
                </select>
            </div>
            <button class="btn btn-outline-success btn-md" role="button">Pridėti naują įrašą</button>
            <a class="btn btn-outline-info btn-md" href="/posts" role="button">Atgal</a>
        </form>
    </div>
</div>
<% include partials/footer %>